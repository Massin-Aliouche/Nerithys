{
  "name": "nerithys-site",
  "version": "0.1.0",
  "description": "Nerithys - aquariophilie (static site)",
  "scripts": {
    "images:generate": "node ./scripts/generate-responsive-images.js",
    "build": "node ./scripts/generate-responsive-images.js && node scripts/build.js",
    "build:css": "node ./scripts/build-css.js",
    "lint": "eslint . --ext .js",
    "check": "npm run lint && npm run build:css && npm run build",
    "add-fiche": "node scripts/add-fiche.js"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "jimp": "^0.16.1",
    "png-to-ico": "^2.0.0",
    "sharp": "^0.32.0",
    "eslint": "^8.47.0"
  }
}
